@model FilmsCatalog.Models.ViewModels.Film.FilmDetailsViewModel

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Фильм</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Наименование
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Режиссер
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProducerSecondName)
        </dd>
        <dt class = "col-sm-2">
            Год
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Постер
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Poster)" width="150px" height="300px"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к Списку</a>
</div>
